<% layout('layout/boilerplate') -%>

<div class="row">
    <div class="col-md-6 mx-auto my-5">
        <form action="/products" method="post" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                <input type="text" name="name" id="name" required class="form-control" placeholder="Product Name">
            </div>
            <div class="mb-3">
                <label for="img" class="form-label">Image URL:</label>
                <input type="text" name="img" id="img" required class="form-control" placeholder="Product Image url">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label" >Price:</label>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input type="number" name="price" id="price" required class="form-control" placeholder="Price (to the nearest dollar)">
                </div>
            </div>
            <div class="mb-3">
                <label for="desc" class="form-label">Description:</label>
                <textarea name="desc" id="desc" required class="form-control" rows="5"></textarea>
            </div>
        
            <button type="submit" class="btn btn-sm add btn-info">Add</button>
        </form>
    </div>
</div>