<% layout('layout/boilerplate') -%>

<div class="row">
    <div class="col-6">
        <div class="card shadow-sm mx-auto mt-3 text-center" style="width:100%;">
            <img src="<%=product.img%>" class="card-img-top" alt="<%=product.img%> image">
            <div class="card-body">
              <h5 class="card-title"><%=product.name%></h5>
              <h5 class="card-title">$<%=product.price%></h5>
              <p class="card-text"><%=product.desc%></p>
              <a href="#" class="btn btn-sm btn-info">Buy Now</a>
              <a href="#" class="btn btn-sm btn-warning">Add To Cart</a>
              <a href="/products/<%=product.id%>/edit" class="btn btn-sm btn-secondary">Edit</a>
              <form class="d-inline-block" action="/products/<%=product.id%>?_method=DELETE" method="post">
                  <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            </div>
        </div>
    </div>

    <div class="col-6">
        <h1 class="display-6 text-center">
            Leave Your Review
        </h1>
    </div>
</div>